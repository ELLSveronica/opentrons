{
  "appId": "com.opentrons.ot-app",
  "electronVersion": "1.8.2",
  "files": [
    "node_modules/**/*",
    "lib/**/*",
    {
      "from": "../app/dist",
      "to": "./ui",
      "filter": ["**/*"]
    }
  ],
  "artifactName": "opentrons-v${version}-${os}-${env.NAME_SUFFIX}.${ext}",
  "asar": true,
  "dmg": {
    "backgroundColor": "white",
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "mac": {
    "target": [
      "zip"
    ],
    "category": "public.app-category.productivity"
  },
  "win": {
    "target": [
      "nsis"
    ]
  },
  "linux": {
    "target": [
      "deb"
    ],
    "category": "Science"
  },
  "publish": {
    "provider": "s3"
  }
}
